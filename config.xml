<?xml version='1.0' encoding='utf-8'?>
<widget id="com.climaneer.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>ClimaNeer</name>
  <description>ClimaNeer WebView wrapper</description>
  <author email="you@example.com">ClimaNeer</author>

  <content src="index.html" />

  <!-- Force desktop-like user agent -->
  <preference name="OverrideUserAgent" value="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36" />
  <preference name="AndroidLaunchMode" value="singleTask" />
  <preference name="android-minSdkVersion" value="24" />
  <preference name="android-targetSdkVersion" value="34" />
  <preference name="SplashScreenDelay" value="0" />
  <preference name="ShowSplashScreenSpinner" value="false" />
  <preference name="BackgroundColor" value="000000" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="AndroidInsecureFileModeEnabled" value="true" />
  <preference name="KeepRunning" value="true" />

  <allow-navigation href="*" />
  <access origin="*" />

  <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
</widget>
